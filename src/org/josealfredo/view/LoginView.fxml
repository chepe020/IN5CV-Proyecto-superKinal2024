<AnchorPane id="AnchorPane" prefHeight="750.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.josealfredo.controller.LoginController">
   <children>
      <ImageView fitHeight="750.0" fitWidth="500.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../image/LoginView.png" />
         </image>
      </ImageView>
      <TextField fx:id="tfUser" layoutX="74.0" layoutY="308.0" onAction="#handleButtonAction" prefHeight="26.0" prefWidth="241.0" style="-fx-background-radius: 40;" />
      <PasswordField fx:id="tfPassword" layoutX="74.0" layoutY="448.0" onAction="#handleButtonAction" prefHeight="26.0" prefWidth="242.0" style="-fx-background-radius: 40;" />
      <GridPane layoutX="104.0" layoutY="554.0" prefHeight="152.0" prefWidth="181.0">
        <columnConstraints>
          <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Button fx:id="btnIniciar" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="65.0" prefWidth="144.0" style="-fx-background-radius: 40; -fx-effect: dropshadow(three-pass-box,black,10,0,0,0); -fx-background-color: #9EADFF;" text="Iniciar sesion">
               <font>
                  <Font size="17.0" />
               </font>
            </Button>
            <Button fx:id="btnReguistrar" disable="true" layoutX="28.0" layoutY="16.0" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="65.0" prefWidth="144.0" style="-fx-background-radius: 40; -fx-effect: dropshadow(three-pass-box,black,10,0,0,0); -fx-background-color: #9EADFF;" text="Registrar   usuario" textAlignment="CENTER" wrapText="true" GridPane.rowIndex="1">
               <font>
                  <Font size="17.0" />
               </font>
            </Button>
         </children>
      </GridPane>
   </children>
</AnchorPane>

      <TextField fx:id="tfNombre" layoutX="31.0" layoutY="232.0" prefHeight="33.0" prefWidth="384.0" promptText="Ingrese su nombre" style="-fx-background-radius: 30; -fx-effect: dropshadow(three-pass-box,black,10,0,0,0);" />
